generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  name      String
  desc      String
  picture   String
  price     Int
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime   @default(now())
  name      String
  email     String
  password  String
  picture   String
  isAdmin   Boolean?
  Feedback  Feedback[]
}

model Feedback {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  coffeeStars Int
  message     String
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}
